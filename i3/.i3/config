#
# BAR
#
bar {
	i3bar_command i3bar
  status_command i3status
	position top

	tray_output primary
	tray_output eDP1

	bindsym button4 nop
	bindsym button5 nop
	font pango:mono 14
	strip_workspace_numbers yes

  colors {
    background #000000
    statusline #EEE8D5
    separator  #EEE8D5

    #                  border  backgr. text
    focused_workspace  #EEE8D5 #268BD2 #000000
    active_workspace   #000000 #000000 #268BD2
    inactive_workspace #000000 #000000 #268BD2
    binding_mode       #000000 #D33682 #000000
    urgent_workspace   #000000 #DC322F #000000
    }
}

